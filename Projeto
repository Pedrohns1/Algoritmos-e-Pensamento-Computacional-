#include <stdio.h>

int main(){
    float num, notas = 0;
    char cod;
    printf("***  Cadastro de notas   ***\n");
    
    do {
        notas++;
        printf("Digite sua nota: ");
       scanf("%f", &num);
        if(num >= 0 && num <= 10){ 
         printf("A sua nota é: %.2f. \n", num);
        }
        else{
         printf("Nota inválida. \n");
        } 
        printf("Deseja adicionar outra nota? s/n: ");
        scanf(" %c", &cod);
        if(cod == 's' || cod == 'S'){
        }
        else{
        printf("Você adicionou %.0f notas.\n", notas);
        } 
        }while (cod != 'n');
          
    
    return 0;
}

ATV 4/5

#include <stdio.h>

float calcularMedia(float notas[], int quantidade) {
    if (quantidade == 0) {
        return 0.0;
    }

    float soma = 0.0;
    
    for (int i = 0; i < quantidade; i++) {
        soma += notas[i];
    }
    return soma / quantidade;
}

float encontrarMaiorNota(float notas[], int quantidade) {
    if (quantidade == 0) {
        return 0.0;
    }
    
    float maior = notas[0];
    
    for (int i = 1; i < quantidade; i++) {
        if (notas[i] > maior) {
            maior = notas[i];
        }
    }
    return maior;
}

float encontrarMenorNota(float notas[], int quantidade) {
    if (quantidade == 0) {
        return 0.0;
    }

    float menor = notas[0];
    
    for (int i = 1; i < quantidade; i++) {
        if (notas[i] < menor) {
            menor = notas[i];
        }
    }
    return menor;
}

int main()
{
    float num[10];
    int f = 0;
    char cod;

    printf("*** Cadastro de Notas ***\n");

    do {
        do {
            printf("\nDigite a sua %dª nota: ", f + 1);
            if (scanf("%f", &num[f]) != 1) {
                printf("Entrada inválida. Por favor, digite um número.\n");
                while (getchar() != '\n'); 
                continue;
            }

            if (num[f] >= 0 && num[f] <= 10) {
                printf("Nota %.2f registrada com sucesso.\n", num[f]);
            } else {
                printf("Nota inválida. Por favor, digite uma nota entre 0 e 10.\n");
            }
        } while (!(num[f] >= 0 && num[f] <= 10));
        
        f++;
        
        if (f < 10) {
            printf("\nDeseja adicionar outra nota? (s/n): ");
            scanf(" %c", &cod);
        } else {
            cod = 'n';
            printf("\nLimite máximo de notas atingido.\n");
        }

    } while ((cod == 's' || cod == 'S') && f < 10);

    if (f == 0) {
        printf("\nNenhuma nota válida foi registrada. Encerrando.\n");
        return 0;
    }
    
    printf("\n*** Lista com %d Notas Registradas ***\n", f);
    
    for(int i=0; i<f; i++) {
        printf("%dª Nota: %.2f \n", i + 1, num[i]);
    }

    float media = calcularMedia(num, f);
    float maior = encontrarMaiorNota(num, f);
    float menor = encontrarMenorNota(num, f);

    printf("\n--- Resultados ---\n");
    printf("Média das notas: %.2f\n", media);
    printf("Maior nota: %.2f\n", maior);
    printf("Menor nota: %.2f\n", menor);
    
    return 0;
}
